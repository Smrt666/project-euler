{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile rust file",
            "type": "shell",
            "problemMatcher": [
                "$rustc"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "command": "cargo build --bin ${fileBasenameNoExtension}",
            "presentation": {
                "clear": true
            }
        },
        {
            "label": "Run rust file",
            "type": "shell",
            "dependsOn": [
                "Compile rust file"
            ],
            "dependsOrder": "sequence",
            "command": "cargo run --bin ${fileBasenameNoExtension}",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/"
            },
            "group": {
                "kind": "build",
                 "isDefault": true
           },
           "presentation": {
            "reveal": "always",
          }
        }
    ]
}